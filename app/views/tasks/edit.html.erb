<div class="flex justify-center items-center mt-60">
<div class="w-full shadow-2xl bg-red rounded-lg border md:mt-0 sm:max-w-md xl:p-0 bg-orange-300 border-orange-400">
  <div class="w-full rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-orange-300 border-orange-300">
    <div style="background-color: #FE8616;" class="p-10 rounded-lg shadow text-white flex flex-col justify-center items-center">
      <h1 class="flex justify-center text-xl font-bold leading-tight tracking-tight md:text-2xl text-white">
                  Edit Task
      </h1>

      <%= form_with(model: [@category, @task]) do |form| %>

      <div>
        <%= form.text_field :name, class: "flex justify-center text-black w-full h-auto rounded-xl mt-8" %>
      </div>

      <p class="flex justify-center mt-4 hover:bg-orange-500 rounded-xl p-3">
        <%= form.submit %>
      </p>
      <% end %>
</div>
</div>
</div>
</div>
