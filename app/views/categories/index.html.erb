<div class="flex flex-col justify-center items-center mt-48 bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-gray-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10">
<p style="color: green"><%= notice %></p>
<h1>Categories</h1>

<% if user_signed_in? %>
    <%= link_to "Profile", edit_user_registration_path %>
    <%= button_to "Logout", destroy_user_session_path, method: :delete %>
<% end%>

<div id="categories">
    <% @categories.each do |category| %>
    <% render category%>
    <p>
        <%= link_to "#{category.name}", category%>
    </p>
    <% end %>
</div>

<%= link_to "New category", new_category_path%>
</div>